{% if section.settings.image == blank %}
  {% assign bg_image = 'hero-banner.jpg' | file_url %}
{% else %}
  {% assign bg_image = section.settings.image | img_url: '1000x1000' %}
{% endif %}
<section>
  <div class="relative overflow-hidden bg-no-repeat bg-cover bg-center h-[300px] md:h-[500px]" style="background-image: url({{ bg_image }});">
    <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed" style="background-color: rgba(0, 0, 0, 0.3)">
      <div class="flex justify-center items-center h-full">
        <div class="text-center text-white px-6 md:px-12">
          <div class="mb-12">
            <h1 class="text-3xl md:text-7xl tracking-tight mb-5">{{ section.settings.title | escape }}</h1>
            <p class="text-white text-xl">{{ section.settings.subtitle | escape }}</p>
          </div>
          {% if section.settings.button_link == blank %}
            {% assign button_url = routes.all_products_collection_url %}
          {% else %}
            {% assign button_url = section.settings.button_link %}
          {% endif %}
          <a href="{{ button_url }}" class="inline-block px-7 py-3  bg-white uppercase text-gray-900 font-bold text-sm leading-snug">
            {{ section.settings.button_label | escape }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Got ya Stuff?"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Itâ€™s all about you and style"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Shop now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Hero Banner"
      }
    ]
  }
{% endschema %}